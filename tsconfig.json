{
  "compilerOptions": {
    "target": "ES2024",
    "lib": [
      "DOM",
      "DOM.Iterable",
      "ES2024"
    ],
    "module": "ESNext",
    "moduleResolution": "bundler",
    "outDir": "./dist",
    "sourceMap": true,
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "noUncheckedIndexedAccess": true,
    "types": [
      "chrome-types"
    ]
  },
  "include": [
    "src/**/*"
  ]
}
